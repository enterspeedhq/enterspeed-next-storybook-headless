{
  "sourceEntityTypes": [
    "home"
  ],
  "route": {
    "handles": [
      "navigation"
    ]
  },
  "properties": {
    "navigationItems": {
      "type": "array",
      "input": {
        "$lookup": {
          "operator": "equals",
          "sourceEntityProperty": "originParentId",
          "matchValue": "{originId}"
        }
      },
      "items": {
        "type": "reference",
        "id": "{item.id}",
        "alias": "navigationItem"
      }
    }
  }
}